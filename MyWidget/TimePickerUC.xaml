<UserControl x:Class="MyWidget.TimePickerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyWidget"
             mc:Ignorable="d" Width="108" Height="207">
    <Grid x:Name="grid" HorizontalAlignment="Center" Width="108" Height="206" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="147*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="hourList"  HorizontalAlignment="Center" Width="48" Height="143" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" />
        <ListBox x:Name="minList" Width="48" HorizontalAlignment="Center" Height="143" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"/>
        <Button x:Name="okbutton" Content="OK" Click="Button_Click" Grid.Row="2" Grid.Column="0" Width="48" FontSize="11"/>
        <Button x:Name="cancelbutton" Content="Cancel" Click="cancelbutton_Click" Grid.Row="2" Grid.Column="1" Width="56" FontSize="11"/>
        <Grid x:Name="grid2" Grid.ColumnSpan="2">
            <Label x:Name="TimePickerReturn" Content="00:00" FontSize="14" FontWeight="Bold" />
        </Grid>
    </Grid>
</UserControl>
