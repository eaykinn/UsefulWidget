<Window
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyWidget"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="MyWidget.Window2"
        mc:Ignorable="d"
        Title="Similar Music List" Height="570" Width="460" Foreground="{x:Null}" MinWidth="460" MaxWidth="460" Background="{x:Null}" WindowStyle="None" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="SearchTypeLabel" Background="{x:Null}" Foreground="White"  Grid.Row="2" Width="425"   TextAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" HorizontalAlignment="Left" FontWeight="Bold" FontSize="16" Text="Lyrics" >
            <TextBlock.Effect>
                <DropShadowEffect/>
            </TextBlock.Effect>
        </TextBlock>
        <Button Grid.Row="0" Grid.Column="1" Width="17" Height="22"  VerticalAlignment="Bottom" Click="Button_Click" BorderBrush="{x:Null}" Panel.ZIndex="1">
            <Button.Background>
                <ImageBrush ImageSource="/Resources/Icons/xmark.png"/>
            </Button.Background>
        </Button>
        <Rectangle x:Name="toprect" MouseLeftButtonDown="toprect_MouseDown" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF085594" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <TextBox x:Name="Lyrics" Background="{x:Null}" Foreground="White"  Grid.Row="4" Width="420"   TextAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1" HorizontalAlignment="Center" FontWeight="Bold" FontSize="14" Height="470" BorderBrush="{x:Null}" VerticalScrollBarVisibility="Visible" Padding="5,0,5,0" TextWrapping="Wrap" >
            <TextBox.Effect>
                <DropShadowEffect/>
            </TextBox.Effect>
        </TextBox>

    </Grid>
</Window>
