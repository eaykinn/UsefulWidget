                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background"  
                                    Value="DarkBlue" />
                                <Setter Property="Foreground"  
                                    Value="DarkBlue" />
                                <Setter Property="BorderThickness"  
                                    Value="2" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
